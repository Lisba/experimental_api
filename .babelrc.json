{
  "presets": [
    ["@babel/preset-typescript"],
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ]
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "@routes": "./src/routes",
          "@services": "./src/services",
          "@middlewares": "./src/middlewares",
          "@libs": "./src/libs",
          "@config": "./src/config"
        }
      }
    ]
  ]
}
